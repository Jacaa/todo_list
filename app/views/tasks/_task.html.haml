- unless task.content.nil?
  - unless task.done?
    %li{id: "task-#{task.id}"}
      .task
        .done
          %a{href: change_task_path(task), title: "Change to done",
            data: { remote: "true" } }
            %span.glyphicon.glyphicon-ok
        .content
          = task.content
        .settings
          %a{href: edit_task_path(task), title: "Edit task",
              data: { remote: "true" } }
            %span.glyphicon.glyphicon-pencil
          %a{href: task_path(task), title: "Delete task",
              data: { confirm: "You sure?", method: :delete, remote: "true" } }
            %span.glyphicon.glyphicon-remove
      .timestamp
        %span
          = task.created_at.strftime("%d %b %Y Hour: %H:%M")
  - else
    %li{id: "task-#{task.id}"}
      .task
        .content
          = task.content
        .settings
          %a{href: change_task_path(task), title: "Change to todo",
              data: { remote: "true" } }
            %span.glyphicon.glyphicon-repeat
          %a{href: task_path(task), title: "Delete task",
              data: { confirm: "You sure?", method: :delete, remote: "true" } }
            %span.glyphicon.glyphicon-remove
      .timestamp
        %span
          = task.created_at.strftime("%d %b %Y Hour: %H:%M")