= render 'shared/nav_non_logged_in'

.container.full-width
  .row
    = render 'shared/flash_message'
    .form-white-box.increase-margin
      .form-inside
        .inside-lines
          %h4 Write your email
        = simple_form_for(:activation, url: activations_path) do |f|
          = f.input :email, placeholder: "Write your email", label: false
          .text-center
            = f.button :submit, "Send email!", class: "btn orange-gradient-btn"

/ Modal
= render 'shared/signup_modal'