.login-with-apps
  %h4 Login with:
  .facebook.oauth-icons
    .fa.fa-facebook
    .overlay
      .text= link_to "FACEBOOK", '/auth/facebook'
  .google.oauth-icons
    .fa.fa-google-plus
    .overlay
      .text= link_to "GOOGLE", '/auth/google_oauth2'
  .github.oauth-icons
    .fa.fa-github
    .overlay
      .text= link_to "GITHUB", '/auth/github'
  .inside-lines
    %h4 or
.login-with-email
  = simple_form_for(:session, url: login_path, defaults: {label: false}) do |f|
    = f.input :email, placeholder: "Email"
    = f.input :password, placeholder: "Password"
    = f.input :remember_me, inline_label: "Remember me", as: :boolean
    .text-center
      = f.button :submit, "Login", class: "btn orange-gradient-btn", id: "login-btn"
    .text-center
      %small= link_to "Forgot password?", new_password_reset_path
